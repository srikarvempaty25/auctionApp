<!-- products.ejs -->

<%- include('includes/header') %>
<body>
    <%- include('includes/navbar') %>

    <div class="container mt-5">
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= product.imageUrl %>" class="card-img-top card-image" alt="<%= product.name %>">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">Price: <%= product.price %></p>
                            <p class="card-text">Start Price: <%= product.startPrice %></p>
                            <p class="card-text">Current Bid: <%= product.currentBid %></p>
                            <p class="card-text">Category: <%= product.category %></p>
                            <p class="card-text"><%= product.description %></p>
                            <a class="btn btn-primary mt-auto" href="/display-product/<%= product.id %>">Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

<%- include('includes/footer') %>
